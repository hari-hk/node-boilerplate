{
  "name": "node-boilerplate",
  "version": "1.0.0",
  "description": "",
  "main": "app.ts",
  "scripts": {
    "clean": "rimraf build/* -Recurse -Force",
    "build": "npm run clean && tsc",
    "serve": "ts-node-dev --respawn --transpile-only ./src/index.ts",
    "serve:prod": "NODE_ENV=production node ./build/index.js",
    "lint": "tslint --project tsconfig.json",
    "prettier:base": "prettier --parser typescript --single-quote",
    "prettier:check": "npm run prettier:base -- --list-different \"src/**/*.{ts,tsx}\"",
    "prettier:write": "npm run prettier:base -- --write \"src/**/*.{ts,tsx}\"",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/.bin/typeorm",
    "migration:generate": "npm run typeorm -- migration:generate --config src/config/orm.config.ts --connection  --name ",
    "migration:run": "npm run typeorm -- migration:run"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.12",
    "@types/node": "^15.6.2",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "prettier": "^2.3.0",
    "rimraf": "^3.0.2",
    "ts-node": "^10.0.0",
    "ts-node-dev": "^1.1.6",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.3.2"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "express": "^4.17.1",
    "pg": "^8.7.1",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.2.36"
  }
}
